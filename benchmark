use blib;

use Benchmark;
use MIME::Base64;

$str = "x" x 10000;

timethese(300, {
   'XS Encode'  => sub { encode_base64($str) },
   'Old encode' => sub { MIME::Base64::old_encode_base64($str) },
});

$str = encode_base64("x" x 1000);

timethese(800, {
   'XS Decode'  => sub { decode_base64($str) },
   'Old decode' => sub { MIME::Base64::old_decode_base64($str) },
});
